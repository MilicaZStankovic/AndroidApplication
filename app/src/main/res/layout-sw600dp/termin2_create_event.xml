<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".CreateEvent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_below="@+id/tv_record"
            android:layout_marginTop="10dp"
           android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_mic_24" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Snimi glasovnu poruku!"
            android:textColor="@color/green"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>


        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:padding = "20dp"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:hint = "Unesi uslugu salona"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/btn_record"
            android:textAllCaps="false"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:textSize="50dp"
            android:text="Izaberi datum"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_record"

            android:textAllCaps="false"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"

            android:textSize="50dp"
            android:background="@color/red"
            android:text="Izaberi vreme"
            android:textColor="@color/white" />


         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id = "@+id/btn_done"
            android:background="@color/colorP"
            android:text="Zakazi"
             android:textSize="50dp"
             android:textColor="@color/red" />
</LinearLayout>